@model helperland_project.ViewModel.ContactusViewModel
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/publicpagelayout.cshtml";
}

<main>
    <section class="contact-banner-section">
        <div class="contact-img var-align hidden-xs">
            <img src="/images/group-16_2.png" class="responsive">
        </div>
    </section>

    <section class="contact-detail">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="text-center ">
                        <h2 class="content-title">Contact us</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 d-flex justify-content-center align-items-center">
                    <hr class="line-hr">
                    <img src="/images/forma-1-copy-5.png" class="faq-separator mx-2" alt="">
                    <hr class="line-hr">
                </div>
            </div>

            <div class="extra-service d-flex flex-wrap justify-content-center align-items-center">
                <div class="extra-items text-center ">
                    <div class=" d-flex justify-content-center align-items-center mx-auto">
                        <img src="/images/forma-1_2.png" alt="">
                    </div>
                    <div class="extra-details mt-3">
                        <p class="extra-title mb-0">
                            1111 Lorem ipsum text 100,<br>Lorem ipsum AB
                        </p>
                    </div>
                </div>
                <div class="extra-items text-center">
                    <div class=" d-flex justify-content-center align-items-center mx-auto">
                        <img src="/images/phone-call.png" alt="">
                    </div>
                    <div class="extra-details mt-3">
                        <p class="extra-title mb-0">
                            +49 (40) 123 56 7890<br>
                            +49 (40) 123 56 7890
                        </p>
                    </div>
                </div>
                <div class="extra-items text-center">
                    <div class="d-flex justify-content-center align-items-center mx-auto">
                        <img src="/images/vector-smart-object.png" alt="">
                    </div>
                    <div class="extra-details mt-3">
                        <p class="extra-title mb-0">
                            info@helperland.com
                        </p>
                    </div>
                </div>
            </div>
            <hr class="mb-2 mt-5">
        </div>
    </section>

    <section class="contact">
        <div class="container">
            <h2 class="text-center">Get in touch with us</h2>
            <div class="Contact_form mx-auto">
                <form class="row  g-3" asp-action="Contact" asp-controller="Home">
                    <div class="col-md-6">
                        <input type="text" asp-for="FirstName" class="form-control" id="Firstname" placeholder="First Name" required>
                    </div>
                    <div class="col-md-6">
                        <input type="text" asp-for="LastName" class="form-control" id="Lastname" placeholder="Last Name" required>
                    </div>
                    <div class="col-md-6">
                        <div class="row g-0">
                            <div class="col-sm-12 input-group">
                                <span class="c_code align-items-center justify-content-center">+49</span>
                                <input type="tel" asp-for="PhoneNumber" class="form-control" id="Phone number" placeholder="Mobile Number" pattern="[0-9]{10}" onkeypress="return (event.charCode !=8 && event.charCode ==0 || ( event.charCode == 46 || (event.charCode >= 48 && event.charCode <= 57)))" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <input type="email" asp-for="Email" class="form-control" id="Email" placeholder="Email address" required>
                    </div>
                    <div class="col-md-12">
                        <select asp-for="Subject" class="form-select form-sub" aria-label="Default select example">
                            <option selected value="General">General</option>
                            <option value="Inquiry">Inquiry</option>
                            <option value="Renewal">Renewal</option>
                            <option value="Reluctance">Reluctance</option>
                        </select>                    
                    </div>
                    <div class="col-md-12">
                        <textarea class="form-control" asp-for="Message" id="message" placeholder="Messages" rows="4"></textarea>
                    </div>
                    <div class="col-md-12 text-center bt">
                        <button class="c_sub_btn" type="submit" name="Submit"><h3>Submit</h3></button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <section class="map">
        <div>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3773.83146053615!2d72.8235753145849!3d18.938852787166763!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3be7d1e0f0a26a81%3A0x87d6e47e04df3916!2sWankhede%20Stadium%20Mumbai!5e0!3m2!1sen!2sin!4v1638267492310!5m2!1sen!2sin" width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy">
            </iframe>
        </div>
    </section>

    <section class="our-news-letter our-news-letter-bg">
        <div class="container text-center">
            <a href="#" class="scroll-top"><img src="/images/up-arrow.png" alt="up-arrow"></a>
            <a href="#" class="message-boat"><img src="/images/message-boat.png" alt="message-boat"></a>
            <h2>GET OUR NEWSLETTER</h2>
            <div class="form-row d-flex justify-content-center align-items-center">
                <div class="form-group">
                    <label for="email" style="display: none;">YOUR EMAIL</label>
                    <input type="text" placeholder="YOUR EMAIL" id="email" class="form-control">
                </div>
                <div class="btn-wrapper">
                    <button class="red-btn">Submit</button>
                </div>
            </div>
        </div>
    </section>
</main>

